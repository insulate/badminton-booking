{
  "name": "badminton-system",
  "version": "1.0.0",
  "private": true,
  "description": "Badminton Court Booking System - Monorepo",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "build": "cd frontend && npm run build",
    "test": "npm run test:backend && npm run test:e2e",
    "test:backend": "cd backend && npm test",
    "test:e2e": "cd frontend && npm run test:e2e",
    "test:all": "npm run test:backend && npm run test:e2e",
    "seed": "cd backend && npm run seed:all",
    "seed:all": "cd backend && npm run seed:all",
    "seed:clear": "cd backend && npm run seed:clear",
    "seed:users": "cd backend && npm run seed:users",
    "seed:settings": "cd backend && npm run seed:settings",
    "seed:courts": "cd backend && npm run seed:courts",
    "seed:timeslots": "cd backend && npm run seed:timeslots",
    "seed:players": "cd backend && npm run seed:players",
    "seed:categories": "cd backend && npm run seed:categories",
    "seed:products": "cd backend && npm run seed:products"
  },
  "keywords": [
    "badminton",
    "booking",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
